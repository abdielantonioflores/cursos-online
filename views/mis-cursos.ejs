<!DOCTYPE html>
<html lang="en" ng-app="Cursos">
<% include partials/head/headHome/head%>

<body>
  <% include partials/navbar/nav%>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">cursos/listas</a>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/shopping-cart">carrito</a>
        </li>
      </ul>
      <span class="navbar-text">
        Todos los derechos reservados
      </span>
    </div>
  </nav>

  <div class="container" ng-cloak ng-controller="My-courses">
    <div ng-repeat="x in dataList ">
      <div class="row">
        <div class="col-md-12">
          <div>
            <div class="gift row">
              <div class="gift__img col-sm-3 col-12">
                <img ng-src="./Imagenes/{{x.Imagen}}" />
                <div class="gift__rating">
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star fa-star-half-o"></i>
                  <i class="fa fa-star fa-star-o"></i>
                  <span class="gift__rating-number">90</span></div>
              </div>
              <div class="gift__info col-sm-9 col-12">
                <h4 class="gift__name">{{x.Titulo}}<br /></h4>
                <div class="gift__details">
                  <p> <b>Información</b>:{{x.Informacion}}</p>
                  <p> <b>Profesor</b>:{{x.nombre_profesor}}</p>
                </div>
                <div class="gift__bottom row mt-3">
                  <div class="gift__price-wrap col-12 col-sm-6">
                    <div class="gift__normal-price"></div>
                    <div class="gift__today-price"></div>
                    <!-- <h3 class="gift__name">Precio: {{dataCourse.Precio | currency}}</h3> -->
                  </div>
                  <div class="gift__cta-wrap col-12 col-sm-6">
                    <button class="btn btn-dark btn-block btn-lg" ng-click="AddShoppingCard(dataCourse)">
                      Comenzar curso <i class="fa fa-play" aria-hidden="true"></i>

                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <% include partials/footer/footer%>
  <% include partials/script/script%>
</body>

</html>